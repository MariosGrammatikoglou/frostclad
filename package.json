{
  "name": "frostclad",
  "version": "1.0.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "electron": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron-pack": "npm run build && electron-builder"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "98.css": "^0.1.21",
    "electron-updater": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MariosGrammatikoglou/frostclad"
  },
  "build": {
    "appId": "com.frostclad.app",
    "productName": "Frostclad",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron.js",
      "apps/frontend/out/**",
      "apps/frontend/package.json",
      "apps/frontend/node_modules/**"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Frostclad"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}